<h1>User Profile for: <%= @user.name %></h1>

<div class = "create_playlist_showpage_parent">
  <%= link_to "Create a New Playlist", new_playlist_path, :class => "create_playlist_showpage_button"%>
</div>

<div class="usercontainer">
  <div class="userplaylists">
    <h2>Playlists Created by <%= @user.name %></h3>
    <ul>
      <% @playlists.each do |playlist| %>
          <% if playlist.creator_id == @user.id %>
            <li><%= link_to playlist.name, playlist %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
  <div class="sharedplaylists">
  <h2>Playlists Shared with <%= @user.name %></h3>
    <ul>
      <% @userplaylists.each do |userplaylist| %>
          <% if userplaylist.listener_id == @user.id%>
            <% playlist = Playlist.find_by(id: userplaylist.playlist_id) %>
            <li><%= link_to playlist.name, playlist %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
