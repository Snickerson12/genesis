<h1>Playlist Name: <%= @playlist.name %></h1>

<div class="pbuttonparent">
  <% if @playlist.private == true || @playlist.creator_id == session[:user_id] %>
    <%= button_to "Edit Playlist", edit_playlist_path(@playlist), method: "get", :class => "editplaylist"  %> 
    <%= button_to "Share Playlist", share_path(@playlist), method: "get", :class => "shareplaylist" %>
  <% end %>

  <%= button_to "Delete Playlist", @playlist, method: :delete, data: { confirm: "Really?" }, :class => "deleteplaylist" %>

</div>

<div class="playlist-title">
<h2 align="center">Created by: <%= link_to @playlist.creator.name, user_path(@playlist.creator) %></h2>
</div>
<br>
<div class="playlist-show">
  <%= render 'show', model: @playlist %>
</div>


<h2>Likes: <%= @playlist.likes %></h2>
<br>
<%= button_to "like" , like_path(@playlist)%>
<br>
<h2>This playlist is shared with:</h2>
<br>
<ul>
  <% @playlist.listeners.each do |listener| %>
    <li><%= link_to listener.name, listener %></li>
  <% end %>
</ul>
<br>
<p>This playlist is private: <%= @playlist.private %></p>

<div class="filler"></div>
