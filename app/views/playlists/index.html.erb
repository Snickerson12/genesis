<h1>Playlist Index</h1>

<ul>

<% @playlists.each do |playlist| %>
  <% if playlist.private == false %>
  <li><%= link_to playlist.name, playlist_path(playlist) %> by <%= playlist.creator.name %></li>
  <% end %>
<% end %>
</ul>

<%= button_to "Create New Playlist", new_playlist_path, method: "get" %>
<%= link_to 'Sign in with Spotify', '/auth/spotify' %>
