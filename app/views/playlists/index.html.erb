<h1>Playlist Index</h1>

<div class="creationparent">
  <div>
    <%= button_to "Create New Playlist", new_playlist_path, method: "get", :class => "createplaylist" %>
  </div>
</div>



<div class="indexparent">
  <div class = "playlistcontainer">
    <ul>
    <% @playlists.each do |playlist| %>
      <% if playlist.private == false %>
      <li><%= link_to playlist.name, playlist_path(playlist) %> by <%= playlist.creator.name %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>


