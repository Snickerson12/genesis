<% if flash[:errors] %>
  <% flash[:errors].each do |error|  %>
    <%= error %>
  <% end %>
<% end %>

  <%= form_with model: @playlist do |f| %>
      <%= f.label "name" %>
      <%= f.text_field :name %><br>
      <%= f.hidden_field(:creator_id) %>
      <%= f.label 'Private?' %>
      <%= f.check_box :private %><br>
      <p><%= f.submit %></p>
  <% end %>
